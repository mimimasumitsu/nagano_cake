<div class="container">
  <div class="row">
    <div class="col-3">
      <h4 class="mb-4 text-center bg-light w-75">商品新規登録</h4>
    </div>
  </div>
  <%= form_with model: [:admin, @item], local: true do |f| %>
    <dl class="row">
      <dt class="col-3"><%= f.label :image, '商品画像' %></dt>
      <dd class="col-3"><%= f.attachment_field :image %></dd>
    </dl>
    <dl class="row">
      <dt class="col-3"><%= f.label :name, '商品名' %></dt>
      <dd class="col-3"><%= f.text_field :name %></dd>
    </dl>
    <dl class="row">
      <dt class="col-3"><%= f.label :introduction, '商品説明' %></dt>
      <dd class="col-3"><%= f.text_area :introduction %></dd>
    </dl>
    <dl class="row">
      <dt class="col-3"><%= f.label :genre_id, 'ジャンル' %></dt>
      <dd class="col-3"><%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "-- 選択してください --" %></dd>
    </dl>
    <dl class="row">
      <dt class="col-3"><%= f.label :price, '税抜価格' %></dt>
      <dd class="col-3"><%= f.text_field :price %>円</dd>
    </dl>
    <dl class="row">
      <dt class="col-3"><%= f.label :is_active, '販売ステータス' %></dt>
      <dd class="col-3">
        <label>
          <%= f.radio_button :is_active, :true, checked: true %>販売中
        </label>
        <label>
          <%= f.radio_button :is_active, :false %>販売停止中
        </label>
      </dd>
    </dl>
    <div class="row justify-content-center col-8">
      <%= f.submit '新規登録', class: "btn btn-success btn-sm" %>
    </div>
  <% end %>
</div>