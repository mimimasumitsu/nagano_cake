<h2><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h2>
  <div>
    <span>会員ID</span>
    <%= @customer.id %>
  </div>
<%= form_with model: @customer, url: admin_customer_path(@customer), local: true do |f| %>
  <div>
    <%= f.label [:first_name, :last_name], '氏名' %>
    <%= f.text_field :first_name %>
    <%= f.text_field :last_name %>
  </div>
  <div>
    <%= f.label [:first_name_kana, :last_name_kana], 'フリガナ' %>
    <%= f.text_field :first_name_kana %>
    <%= f.text_field :last_name_kana %>
  </div>
  <div>
    <%= f.label :postal_code, '郵便番号' %>
    <%= f.text_field :postal_code %>
  </div>
  <div>
    <%= f.label :address, '住所' %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :telephone_number, '電話番号' %>
    <%= f.text_field :telephone_number %>
  </div>
  <div>
    <%= f.label :email, 'メールアドレス' %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :is_active, '会員ステータス' %>
    <label>
      <%= f.radio_button :is_active, :true %>有効
    </label>
    <label>
      <%= f.radio_button :is_active, :false %>退会
    </label>
  </div>
  <div>
    <%= f.submit '変更を保存' %>
  </div>
<% end %>