<h2>配送先登録/一覧</h2>
<%= form_with model: @address, local: true do |f| %>
  <div>
    <%= f.label :postal_code, '郵便番号(ハイフンなし)' %>
    <%= f.text_field :postal_code %>
  </div>
  <div>
    <%= f.label :address, '住所' %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :name, '宛名' %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.submit '新規登録' %>
  </div>
<% end %>

<table>
  <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
  </tr>
  <tr>
    <% @addresses.each do |address| %>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to '編集する',edit_address_path(address) %><%= link_to '削除する', address_path(address.id), method: :delete %></td>
    <% end %>
  </tr>
</table>