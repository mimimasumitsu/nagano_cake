<div class="container">
  <div class="row">
    <div class="col-3">
      <h4 class="text-center bg-light w-75">管理者ログイン</h4>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mb-2">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, size: 40, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field mb-4">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, size: 40, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-sm btn-primary" %>
      </div>
    <% end %>
  </div>
</div>