<div class="container">
  <div class="row">
    <div class="col-3">
      <h4 class="mb-4 text-center bg-light w-75">注文履歴詳細</h4>
    </div>
  </div>
  <h6>注文情報</h6>
    <table class="table table-bordered col-8">
      <tr>
        <th class="table-active col-2">注文日</th>
        <td class="col-10"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th class="table-active col-2">配送先</th>
        <td class="col-10">
          <%= @order.postal_code %><br>
          <%= @order.address %><br>
          <%= @order.name %>
        </td>
      </tr>
      <tr>
        <th class="table-active col-2">支払方法</th>
        <td class="col-10"><%= @order.payment_method_i18n %></td>
      </tr>
    </table>
  <h6>請求情報</h6>
    <table class="table table-bordered col-3">
      <tr>
        <th class="table-active">商品合計</th>
        <td><%= @order.total_payment - @order.shipping_cost %></td>
      </tr>
      <tr>
        <th class="table-active">配送料</th>
        <td><%= @order.shipping_cost %></td>
      </tr>
      <tr>
        <th class="table-active">ご請求額</th>
        <td><%= @order.total_payment %></td>
      </tr>
    </table>
  <h6>注文内容</h6>
    <table class="table table-bordered col-10">
      <tr class="table-active">
        <th class="col-6">商品</th>
        <th class="col-2">単価(税込)</th>
        <th class="col-1">個数</th>
        <th class="col-1">小計</th>
      </tr>
      <% @order.order_items.each do |item| %>
      <tr>
        <td class="col-6"><%= item.item.name %></td>
        <td class="col-2"><%= item.price %></td>
        <td class="col-1"><%= item.amount %></td>
        <td class="col-1"><%= item.price * item.amount %></td>
      </tr>
      <% end %>
    </table>
  </div>