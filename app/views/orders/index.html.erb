<h2>注文履歴一覧</h2>
<table>
  <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
  </tr>
  <tr>
    <% @orders.each do |order| %>
      <td><%= order.created_at %></td>
      <td>
        <%= order.postal_code %>
        <%= order.address %>
        <%= order.name %>
      </td>
      <td><%#= item %></td>
      <td><%= order.total_payment %></td>
      <td><%= order.status %></td>
      <td><%= link_to '表示する', orders_confirm_path(order) %></td>
    <% end %>
  </tr>
</table>