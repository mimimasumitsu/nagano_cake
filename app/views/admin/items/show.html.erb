<div class="container">
  <div class="row">
    <div class="col-3">
      <h4 class="mb-4 text-center bg-light w-75">商品詳細</h4>
    </div>
  </div>
  <%= attachment_image_tag @item, :image, format: 'jpeg', size: "300x300" %>
  <dl class="row">
    <dt>商品名</dt>
    <dd><%= @item.name %></dd>
  </dl>
  <dl class="row">
    <dt>商品説明</dt>
    <dd><%= @item.introduction %></dd>
  </dl>
  <dl class="row">
    <dt>ジャンル</dt>
    <dd><%= @item.genre.name %></dd>
  </dl>
  <dl class="row">
    <dt>税込価格(税抜価格)</dt>
    <dd><%= @item.add_tax_price %>(<%= @item.price %>)円</dd>
  </dl>
  <dl class="row">
    <dt>販売ステータス</dt>
    <dd>
      <% if @item.is_active == true %>
        販売中
      <% else %>
        販売停止中
      <% end %>
    </dd>
  </dl>
  <div class="row justify-content-center col-8">
    <%= link_to '編集する', edit_admin_item_path(@item.id), class: "btn btn-success btn-sm" %>
  </div>
</div>