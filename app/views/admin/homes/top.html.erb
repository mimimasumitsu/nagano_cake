<div class="container">
  <div class="row">
    <div class="col-3">
      <h4 class="mb-4 text-center bg-light w-75">注文履歴一覧</h4>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr class="table-active">
        <th class="col-4">購入日時</th>
        <th class="col-4">購入者</th>
        <th class="col-4">注文個数</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td class="col-4">
            <%= link_to admin_order_path(order) do %>
              <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
            <% end %>
          </td>
          <td class="col-4"><%= order.name %></td>
          <td class="col-4"><%= order.order_items.sum(:amount) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>