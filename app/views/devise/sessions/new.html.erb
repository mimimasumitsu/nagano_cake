<div class="container">
  <div class="row">
    <div class="col-3">
      <h4 class="mb-4 text-center bg-light w-75">ログイン</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
      <h6 class="mb-2 text-center bg-light w-75">会員の方はこちらからログイン</h6>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mb-2">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, size: 40, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field mb-4">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, size: 40, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-sm btn-primary mb-5" %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-4">
      <h6 class="mb-2 text-center bg-light w-75">会員登録がお済みでない方</h6>
    </div>
  </div>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "こちら", new_registration_path(resource_name) %>から新規登録を行ってください。<br />
  <% end %>
</div>