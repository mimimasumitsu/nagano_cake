<div class="container">
  <div class="row">
    <div class="col-3">
      <h4>商品一覧</h4>
    </div>
  </div>
  <div class="row justify-content-around">
    <% @items.each do |item| %>
      <div class="col-2 m-4">
        <%= link_to item_path(item) do %>
          <%= attachment_image_tag item, :image, format: 'jpeg', width: '140%', hight: 'auto' %>
        <% end %>
        <dl>
          <dt><%= item.name %></dt>
          <dd>¥<%= item.add_tax_price %></dd>
        </dl>
      </div>
    <% end %>
  </div>
</div>