<div class="container">
  <div class="row">
    <div class="col-3">
      <h4 class="mb-4 text-center bg-light">ジャンル一覧・追加</h4>
    </div>
  </div>
  <%= form_with model: [:admin, @genre], url: admin_genres_path, local: true do |f| %>
    <dl class="row">
      <dt class="col-1"><%= f.label :name, 'ジャンル' %></dt>
      <dd class="col-2"><%= f.text_field :name %></dd>
      <dd class="col-2"><%= f.submit '新規登録', class: "btn btn-success btn-sm" %></dd>
    </dl>
  <% end %>

  <table class="table col-4">
    <thead>
      <th class="table-active">ジャンル</th>
      <th class="table-active"></th>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>