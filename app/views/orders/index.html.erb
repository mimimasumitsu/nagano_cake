<div class="container">
  <div class="row">
    <div class="col-3">
      <h4 class="mb-4 text-center bg-light w-75">注文履歴一覧</h4>
    </div>
  </div>
  <table class="table table-bordered">
    <tr class="table-active">
      <th class="col-2">注文日</th>
      <th class="col-4">配送先</th>
      <th class="col-3">注文商品</th>
      <th class="col-1">支払金額</th>
      <th class="col-2">注文詳細</th>
    </tr>
    <% @orders.each do |order| %>
      <tr>
        <td class="col-2"><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td class="col-4">
          〒<%= order.postal_code %><br>
          <%= order.address %><br>
          <%= order.name %>
        </td>
        <td class="col-3">
          <% order.order_items.each do |item| %>
            <%= item.item.name %></br>
          <% end %>
        </td>
        <td class="col-1"><%= order.total_payment %>円</td>
        <td class="col-2"><%= link_to '表示する', order_path(order), class: "btn btn-primary btn-sm" %></td>
      </tr>
    <% end %>
  </table>
</div>