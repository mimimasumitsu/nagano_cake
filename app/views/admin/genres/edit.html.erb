<div class="container">
  <div class="row">
    <div class="col-3">
      <h4 class="mb-4 text-center bg-light">ジャンル編集</h4>
    </div>
  </div>
  <%= form_with model: [:admin, @genre], url: admin_genre_path, local: true do |f| %>
    <dl class="row">
      <dt class="col-1"><%= f.label :name, 'ジャンル' %></dt>
      <dt class="col-2"><%= f.text_field :name %></dd>
      <dt class="col-2"><%= f.submit '変更を保存', class: "btn btn-success btn-sm" %></dd>
    </dl>
  <% end %>
</div>