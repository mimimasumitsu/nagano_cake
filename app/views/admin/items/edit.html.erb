<h2>商品編集</h2>
<%= form_with model: @item, local: true do |f| %>
  <div>
    <%= f.label :image, '商品画像' %>
    <%= f.attachment_field :image %>
  </div>
  <div>
    <%= f.label :name, '商品名' %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :introduction, '商品説明' %>
    <%= f.text_area :introduction %>
  </div>
  <div>
    <%= f.label :genre, 'ジャンル' %>
    <%= f.collection_select :genre, Genre.all, :id, :name %>
  </div>
  <div>
    <%= f.label :price, '税抜価格' %>
    <%= f.text_field :price %><span>円</span>
  </div>
  <div>
    <%= f.label :is_active, '販売ステータス' %>
    <label>
      <%= f.radio_button :is_active, :true %>販売中
    </label>
    <label>
      <%= f.radio_button :is_active, :false %>販売停止中
    </label>
  </div>
  <div>
    <%= f.submit '変更を保存' %>
  </div>
<% end %>